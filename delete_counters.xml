<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:hint="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actv_Id_delete"
        android:ems="4"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="?android:attr/colorForeground"
        android:cursorVisible="true"
        android:textSize="28sp"
        android:imeOptions="actionNext"
        android:maxLength="4"
        android:maxLines="1"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_machine_delete"
        android:layout_toEndOf="@+id/tv_machine_delete"
        android:layout_marginTop="97dp" />

    <TextView
        android:text="Machine ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_machine_delete"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/actv_Id_delete"
        android:layout_alignBottom="@+id/actv_Id_delete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="DELETE MACHINE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actv_Id_delete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="116dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="96dp"
        android:id="@+id/button3" />

    <Button
        android:text="DELETE ALL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button3"
        android:layout_toRightOf="@+id/actv_Id_delete"
        android:layout_toEndOf="@+id/actv_Id_delete"
        android:layout_marginLeft="141dp"
        android:layout_marginStart="141dp"
        android:id="@+id/button4" />
</RelativeLayout>